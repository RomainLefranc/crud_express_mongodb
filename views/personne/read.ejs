<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <%- include('../navbar'); %>

      <div class="row justify-content-center">
        <div class="col-3">
          <form method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Nom</label>
              <input
                readonly
                type="text"
                class="form-control"
                value="<%= personne.name %>"
              />
            </div>
            <div class="mb-3">
              <label for="genre" class="form-label">Genre</label>
              <input
                readonly
                type="text"
                class="form-control"
                value="<%= personne.genre %>"
              />
            </div>
          </form>
        </div>
        <a
          class="btn btn-success mb-3"
          href="/personne/<%= personne._id %>/cours/crud/create"
          role="button"
          >Assigner cours</a
        >
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Cours</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% personne.cours.forEach((cours, index) => { %>
            <tr>
              <td><%= cours.name %></td>
              <td>
                <a
                  class="btn btn-warning"
                  href="/cours/crud/<%= cours._id %>/update"
                  role="button"
                  >Modifier</a
                >
                <a
                  class="btn btn-success"
                  href="/cours/crud/<%= cours._id %>/read"
                  role="button"
                  >Détails</a
                >
                <button
                  class="btn btn-danger"
                  onclick="deleteLiaison('<%= personne.join[index]._id %>')"
                  role="button"
                  type="button"
                >
                  Désassigner
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script>
      async function deleteLiaison(id) {
        await fetch(`http://localhost:3000/personnes_cours/crud/${id}/delete`, {
          method: "DELETE",
        }).then((res) => {
          window.location.reload();
        });
      }
    </script>
  </body>
</html>
